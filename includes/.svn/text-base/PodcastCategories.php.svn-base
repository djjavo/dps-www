<?php
class PodcastCategories{
    public static function all(){
		$return = array();
        $sql = "SELECT * FROM web_podcast_categories";
        $result = RawDB::query($sql);
        while ($object = pg_fetch_object($result,null,'PodcastCategory'))
            $return[] = $object;
      
        return $return;
    }

    public static function get($id){
    	if(!is_numeric($id))	throw new UserError();
        $sql = "SELECT * FROM web_podcast_categories WHERE category_id = '" .$id. "'";
        $result = RawDB::query($sql);
        if(pg_num_rows($result))
        	return pg_fetch_object($result,null,'PodcastCategory');
        else
        	return null;
    }
}
?>