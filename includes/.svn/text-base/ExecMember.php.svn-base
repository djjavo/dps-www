<?php
class ExecMember extends Member {
	private $position;
	private $exec_email;
	private $department_id;
	private $description;
	private $exec_id;
	private $department = null;

	public function getPosition(){
		return $this->position;
	}

	public function getEmail(){
		return $this->exec_email;
	}

	public function getDepartment(){
		if(is_null($this->department))
			$this->department = Departments::get($department_id);
		return $this->department;
	}

	public function getDescription(){
		return $this->description;
	}

	public function getExecID(){
		return $this->exec_id;
	}

	public function setDescription($input=null){
		if(is_null($input))
        	return false;
        else{
        	$this->description = $input;
        	return true;
        }
	}
	
	public function save(){
		parent::save();
		$this->update();
	}
	
	protected function update(){
		RawDB::query("UPDATE web_members_exec SET 'description'='".pg_escape_string($this->description)."' WHERE exec_id = '".$this->exec_id."'");
	}
}
?>