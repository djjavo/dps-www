<?php
class Temp2Template implements Template{
	protected static $subtitle;
	public static function set_subtitle($subtitle){
		self::$subtitle = $subtitle;
	}
	public static function print_page($content){

	$site_path_array = explode("/",SITE_PAGE);

echo("<!DOCTYPE html PUBLIC \"-//W3C//DTD XHTML 1.0 Strict//EN\" \"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd\">
<html xmlns=\"http://www.w3.org/1999/xhtml\" lang=\"en\" xml:lang=\"en\">
<head>
	<meta http-equiv=\"Content-Type\" content=\"text/html;charset=utf-8\" />
	<title>RaW 1251AM"); if(Output::get_title() != 'Untitled Page') { echo (" - ".Output::get_title()); } echo ("</title>");
	if(count(Output::get_stylesheets())>0)
		foreach(Output::get_stylesheets() AS $src){
			echo ("\n	<link href=\"".$src."\" rel=\"stylesheet\" type=\"text/css\"/>");
		}
	if(count(Output::get_scripts())>0)
		foreach(Output::get_scripts() AS $src){
			echo ("\n	<script src=\"".$src."\" type=\"text/javascript\"></script>");
		}
echo("
</head>

<body>

<a href=\"".SITE_LINK_ABS."\"><img src=\"".SITE_LINK_REL."images/header_logo.jpg\" id=\"header_logo\" alt=\"RaW 1251AM\" /></a>

".$content."

</body>

</html>");

	}

	public static function print_http_error($error){
		switch($error){
			case 401: echo("<h1>Unauthorized</h1>\n<p>This page requires special permissions</p>"); break;
			case 404: echo("<h1>Page not found</h1>\n<p>This page does not exist</p>"); break;
		}
	}
	public static function print_fatal_error(){
		echo("<h1>Somebody made a boo-boo</h1>
<p>A Fatal Error Occured!</p>
<textarea cols=\"100\" rows=\"6\">
".Errors::report()."
</textarea>
<p>Please inform William if this problem exists in an hours time</p>");
		Errors::clear();
	}

}
?>
