<?php
class Chart {
	public static function get_tracks() {
		$sql = "SELECT * FROM web_chart ORDER BY position";
		$result = RawDB::query($sql);
		$return = array();
		while($track = pg_fetch_object($result, NULL, 'ChartTrack')){
			$return[] = $track;
		}
		return $return;
	}
	
	public static function get_position($position){
		if (!is_numeric($position)){ exit(); }
		$sql = "SELECT * FROM web_chart WHERE position = ".$position;
		$result = RawDB::query($sql);
		$track = pg_fetch_object($result, NULL, 'ChartTrack');
		return $track;
	}
}