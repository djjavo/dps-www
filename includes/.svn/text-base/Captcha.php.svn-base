require_once ("recaptchalib.php");

	class Captcha{
		protected static $public_key	= "6Ld77AIAAAAAAId4bbxkvb0MD86_nfvGyKy4_d9I";
		protected static $private_key	= "6Ld77AIAAAAAADvNY3iq_L6Em1RwALopCXDVuO56";
		public static function get(){
			return recaptcha_get_html(self::$public_key);
